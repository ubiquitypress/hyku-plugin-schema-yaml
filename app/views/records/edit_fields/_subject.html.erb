<!-- _subject -->
<% if f.object.schema_driven? %>
  <%= render "records/edit_fields/default", f: f, key: key %>

<% else %>
  <%= f.input :subject, as: :multi_value_select,
    collection: Hyku::Plugin::Schema::Yaml::SubjectService.new(model: f.object.model.class).select_active_options,
    include_blank: true,
    input_html: { class: 'form-control' } %>
<% end %>

